<Window x:Name="RenderWindow" x:Class="RayTracerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RayTracerUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top" Background="{x:Null}">
                <ToolBar Background="{x:Null}">
                    <Button Content="Render" />
                    <Button Content="Options" Click="Options_Click" />
                    <Button Content="Save" />
                </ToolBar>
            </ToolBarTray>
        </DockPanel>
    </Grid>
</Window>
